@model IEnumerable<ThAmCo.Events.Data.GuestBooking>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attended)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attended)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { customerid=item.CustomerId, eventid = item.EventId }) |
                @Html.ActionLink("Details", "Details", new { customerid=item.CustomerId, eventid = item.EventId }) |
                @Html.ActionLink("Delete", "Delete", new { customerid=item.CustomerId, eventid = item.EventId  }) 
            </td>
        </tr>
}
    </tbody>
    <p>
        Customer Counter Total: @Model.ToList().Count()  <br>
        Customer Counter Total: @Model.Where(m => m.Attended).ToList().Count()

    </p>
</table>
